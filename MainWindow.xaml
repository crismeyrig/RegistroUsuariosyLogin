<Window x:Class="RegistroUsuariosyLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroUsuariosyLogin"
        mc:Ignorable="d"
        Title="Registro de Usuarios" Height="400" Width="400" WindowStartupLocation="CenterScreen" Icon="/Imagenes/HomeUser.png"  ResizeMode="CanMinimize">
       <Grid>
<StackPanel>
            <Menu Height="24" FontSize="15">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="rUsuariosMenuItem" Click="rUsuariosMenuItem_Click" Header="Registrar Usuario">
                        <MenuItem.Icon>
                            <Image Source="/Imagenes/agregarusuario.png" />
                        </MenuItem.Icon>
                </MenuItem>
                </MenuItem>
                <MenuItem Header="Consultas">
                    <MenuItem x:Name="cUsuariosMenuItem" Click="cUsuariosMenuItem_Click" Header="Consultar Usuario">
                        <MenuItem.Icon>
                            <Image Source="/Imagenes/BuscarUsuario.png" />
                        </MenuItem.Icon>
                </MenuItem>
            
            </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
